datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  Program Program[]
}

model Channel {
  id       Int       @id @default(autoincrement())
  name     String
  isActive Boolean?
  Program  Program[]
  userId   Int?
  user     User?     @relation(fields: [userId], references: [id])
}

model Program {
  id          Int       @id @default(autoincrement())
  title       String
  duration    Int
  description String?
  videoUrl    String?
  airDate     DateTime?
  channelId   Int?
  typeId      Int?
  categoryId  Int?
  isActive    Boolean?
  category    Category? @relation(fields: [categoryId], references: [id])
  channel     Channel?  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  type        Type?     @relation(fields: [typeId], references: [id])
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])
}

model Type {
  id      Int       @id @default(autoincrement())
  name    String
  Program Program[]
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  email    String    @unique
  password String
  Program  Program[]
  Channel  Channel[]
  roleId   Int       
  role     Role      @relation(fields: [roleId], references: [id]) 
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] 
}
